<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qa30m.m_teamwork">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.mhassanetimadi.CRIDA_e_teamwork.MTeamWork"
        android:allowBackup="true"
        android:icon="@drawable/ic_employees"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MaterialTheme">
        <activity android:name="com.mhassanetimadi.CRIDA_e_teamwork.ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mhassanetimadi.CRIDA_e_teamwork.ActivitySignin"
            android:label="@string/title_activity_login" />
        <activity android:name="com.mhassanetimadi.CRIDA_e_teamwork.ActivityAddTask" />
        <activity android:name="com.mhassanetimadi.CRIDA_e_teamwork.ActivityAddEmployee"/>
        <activity android:name="com.mhassanetimadi.CRIDA_e_teamwork.ActivityAbout" />
        <activity android:name="com.mhassanetimadi.CRIDA_e_teamwork.ActivityEmployee" />
        <activity android:name="com.mhassanetimadi.CRIDA_e_teamwork.ActivitySignup" />
        <activity
            android:name="com.mhassanetimadi.CRIDA_e_teamwork.ActivityTaskDetial"
            android:parentActivityName="com.mhassanetimadi.CRIDA_e_teamwork.ActivityMain"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"></activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name="com.mhassanetimadi.CRIDA_e_teamwork.Employee_Register"></activity>
    </application>

</manifest>