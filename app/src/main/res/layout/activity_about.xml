<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mhassanetimadi.CRIDA_e_teamwork.ActivitySignin">

    <TextView
        android:text="Handicrafts News and Tutorials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/textView"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:textColor="#f00" />


    <TextView
        android:text="Thank you for using this app. If you have any suggestion or question please contact me at myemail@gmail.com.
Your suggestions are highly valuable for us and will encourage us to further improve this application and bring new features to it."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/textView2"
        android:textSize="19sp"
        android:autoLink="email"
        android:lineSpacingMultiplier="1.2"
        android:layout_below="@+id/textView" />
</LinearLayout>
